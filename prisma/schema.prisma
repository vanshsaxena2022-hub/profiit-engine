generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl=env("DIRECT_DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  shopId    String?
  createdAt DateTime @default(now())
  shop      Shop?    @relation(fields: [shopId], references: [id])
}

model Product {
  id          String         @id @default(uuid())
  name        String
  description String
  category    String
  shopId      String
  createdAt   DateTime       @default(now())
  arModelGlb  String?
  arModelUsdz String?
  shop        Shop           @relation(fields: [shopId], references: [id])
  images      ProductImage[]
}

model ProductImage {
  id        String  @id @default(uuid())
  imageUrl  String
  productId String
  product   Product @relation(fields: [productId], references: [id])
}

model Shop {
  id             String      @id @default(cuid())
  name           String
  slug           String      @unique
  whatsappNumber String
  tagline        String?
  logoUrl        String?
  arEnabled      Boolean     @default(false)
  createdAt      DateTime    @default(now())
  analytics      Analytics[]
  products       Product[]
  users          User[]
}

model Analytics {
  id        String   @id @default(cuid())
  shopId    String
  productId String?
  type      String
  createdAt DateTime @default(now())
  shop      Shop     @relation(fields: [shopId], references: [id])
}
