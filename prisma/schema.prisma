generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  shopId   String?

  shop      Shop?    @relation(fields: [shopId], references: [id])
  createdAt DateTime @default(now())
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  category    String
  arModelUrl  String?
  shopId      String
  createdAt   DateTime @default(now())

  shop   Shop           @relation(fields: [shopId], references: [id])
  images ProductImage[]
}

model ProductImage {
  id        String @id @default(uuid())
  imageUrl  String
  productId String

  product Product @relation(fields: [productId], references: [id])
}

model Shop {
  id             String   @id @default(cuid())
  name           String
  slug           String   @unique
  whatsappNumber String
  logoUrl        String?
  tagline        String?
  createdAt      DateTime @default(now())

  users     User[]
  products  Product[]
  analytics Analytics[]
}

model Analytics {
  id        String   @id @default(cuid())
  shopId    String
  productId String?
  type      String // "link_open" | "whatsapp_click"
  createdAt DateTime @default(now())

  shop Shop @relation(fields: [shopId], references: [id])
}
